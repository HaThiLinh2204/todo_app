<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
         <td class="fs-4">
             <%= link_to list.description, edit_list_path(list) %>
         </td>
        <td class="fw-bold <%= list.completed? ? 'text-success' : 'text-danger' %>"><%= list.description %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

